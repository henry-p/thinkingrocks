---
import BaseLayout from "../layouts/BaseLayout.astro";
import { formatDate } from "../lib/format";
import { getAllPosts } from "../lib/posts";

const posts = getAllPosts();
const displayPosts = posts;
---

<BaseLayout title="Posts">
  <div class="space-y-6">
    <header class="space-y-2">
      <h1 class="text-[32px] font-bold leading-[36px] tracking-tight text-slate-900 dark:text-slate-100">All posts</h1>
      <p class="text-sm text-slate-600 dark:text-slate-400">
        {displayPosts.length} {displayPosts.length === 1 ? "entry" : "entries"}
      </p>
    </header>

    <div class="space-y-2">
      {displayPosts.map((post) => (
        <a
          href={post.url}
          class="group flex items-center justify-between gap-3 -mx-3 rounded-full px-4 py-3 hover:bg-cream-pill dark:hover:bg-slate-800"
        >
          <h2 class="text-base font-normal text-slate-900 group-hover:text-white group-hover:font-semibold dark:text-slate-100 dark:group-hover:text-white">
            {post.title}
          </h2>
          <span class="whitespace-nowrap rounded-full bg-cream-pill px-3 py-1 text-xs font-medium text-slate-700 group-hover:bg-cream-pill group-hover:text-white group-hover:font-semibold dark:bg-slate-800 dark:text-slate-300 dark:group-hover:bg-slate-800 dark:group-hover:text-white">
            {formatDate(post.date)}
          </span>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
