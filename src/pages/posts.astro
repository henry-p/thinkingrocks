---
import BaseLayout from "../layouts/BaseLayout.astro";
import { formatDate } from "../lib/format";
import { getAllPosts } from "../lib/posts";

const posts = getAllPosts();
const displayPosts = Array.from({ length: 20 }, () => posts).flat();
---

<BaseLayout title="Posts">
  <div class="space-y-6">
    <header class="space-y-2">
      <h1 class="text-3xl font-bold tracking-tight text-slate-900">All posts</h1>
      <p class="text-sm text-slate-600">
        {displayPosts.length} {displayPosts.length === 1 ? "entry" : "entries"}
      </p>
    </header>

    <div class="space-y-2">
      {displayPosts.map((post) => (
        <a
          href={post.url}
          class="group flex items-center justify-between gap-3 -mx-3 rounded-full px-4 py-3 transition duration-200 ease-out hover:bg-cream-pill"
        >
          <h2 class="text-base font-normal text-slate-900 transition-colors group-hover:text-white group-hover:font-semibold">
            {post.title}
          </h2>
          <span class="whitespace-nowrap rounded-full bg-cream-pill px-3 py-1 text-xs font-medium text-slate-700 transition-colors group-hover:text-white group-hover:font-semibold">
            {formatDate(post.date)}
          </span>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
