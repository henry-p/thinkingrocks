---
import BaseLayout from "../layouts/BaseLayout.astro";
import { PAGE_META, SITE } from "../lib/site";

const { title, description } = PAGE_META.about;
---

<BaseLayout title={title} description={description}>
  <article class="space-y-8">
    <header class="flex flex-col items-start gap-6 sm:flex-row sm:items-center sm:gap-8">
      <div class="relative h-28 w-28 shrink-0 overflow-hidden rounded-2xl bg-slate-200 ring-4 ring-white shadow-sm dark:bg-slate-800 dark:ring-slate-900">
        <img src={SITE.profileImage} alt="Henry Perschk" class="h-full w-full object-cover" loading="lazy" />
      </div>
      <div class="space-y-2">
        <h1 class="text-[32px] font-bold leading-[36px] tracking-tight text-slate-900 dark:text-slate-100">{title}</h1>
        <p class="text-sm text-slate-600 max-w-xl dark:text-slate-300">
          AI, Digital Physics, Artificial Life, Open-Endedness, Evolutionary Algorithms.
        </p>
      </div>
    </header>

    <section class="space-y-3 rounded-2xl border border-slate-900/10 bg-white/80 p-5 shadow-sm dark:border-white/10 dark:bg-slate-900/70">
      <h2 class="text-sm font-medium uppercase tracking-[0.12em] text-slate-600 dark:text-slate-300">Selection of cyberspace traces</h2>
      <div class="space-y-2">
        <a
          href={SITE.xPlatformUrl}
          target="_blank"
          rel="noreferrer"
          class="group flex items-center justify-between rounded-xl border border-slate-900/10 bg-white px-4 py-3 text-sm font-medium text-slate-800 transition hover:-translate-y-[1px] hover:border-slate-900/20 hover:shadow-sm dark:border-white/10 dark:bg-slate-950 dark:text-slate-100 dark:hover:border-white/20"
        >
          <span>X / Twitter</span>
          <span aria-hidden="true" class="text-slate-500 transition group-hover:translate-x-0.5 dark:text-slate-400">→</span>
        </a>
        <a
          href="https://github.com/henry-p"
          target="_blank"
          rel="noreferrer"
          class="group flex items-center justify-between rounded-xl border border-slate-900/10 bg-white px-4 py-3 text-sm font-medium text-slate-800 transition hover:-translate-y-[1px] hover:border-slate-900/20 hover:shadow-sm dark:border-white/10 dark:bg-slate-950 dark:text-slate-100 dark:hover:border-white/20"
        >
          <span>GitHub</span>
          <span aria-hidden="true" class="text-slate-500 transition group-hover:translate-x-0.5 dark:text-slate-400">→</span>
        </a>
        <a
          href="https://www.linkedin.com/in/hmhp/"
          target="_blank"
          rel="noreferrer"
          class="group flex items-center justify-between rounded-xl border border-slate-900/10 bg-white px-4 py-3 text-sm font-medium text-slate-800 transition hover:-translate-y-[1px] hover:border-slate-900/20 hover:shadow-sm dark:border-white/10 dark:bg-slate-950 dark:text-slate-100 dark:hover:border-white/20"
        >
          <span>LinkedIn</span>
          <span aria-hidden="true" class="text-slate-500 transition group-hover:translate-x-0.5 dark:text-slate-400">→</span>
        </a>
        <a
          href="https://zereal.ai/"
          target="_blank"
          rel="noreferrer"
          class="group flex items-center justify-between rounded-xl border border-slate-900/10 bg-white px-4 py-3 text-sm font-medium text-slate-800 transition hover:-translate-y-[1px] hover:border-slate-900/20 hover:shadow-sm dark:border-white/10 dark:bg-slate-950 dark:text-slate-100 dark:hover:border-white/20"
        >
          <span>Zereal AI (company)</span>
          <span aria-hidden="true" class="text-slate-500 transition group-hover:translate-x-0.5 dark:text-slate-400">→</span>
        </a>
        <a
          href="https://www.itsmycargo.com/"
          target="_blank"
          rel="noreferrer"
          class="group flex items-center justify-between rounded-xl border border-slate-900/10 bg-white px-4 py-3 text-sm font-medium text-slate-800 transition hover:-translate-y-[1px] hover:border-slate-900/20 hover:shadow-sm dark:border-white/10 dark:bg-slate-950 dark:text-slate-100 dark:hover:border-white/20"
        >
          <span>ItsMyCargo (company)</span>
          <span aria-hidden="true" class="text-slate-500 transition group-hover:translate-x-0.5 dark:text-slate-400">→</span>
        </a>
        <a
          href="https://www.techlabs.org/"
          target="_blank"
          rel="noreferrer"
          class="group flex items-center justify-between rounded-xl border border-slate-900/10 bg-white px-4 py-3 text-sm font-medium text-slate-800 transition hover:-translate-y-[1px] hover:border-slate-900/20 hover:shadow-sm dark:border-white/10 dark:bg-slate-950 dark:text-slate-100 dark:hover:border-white/20"
        >
          <span>TechLabs (non-profit)</span>
          <span aria-hidden="true" class="text-slate-500 transition group-hover:translate-x-0.5 dark:text-slate-400">→</span>
        </a>
      </div>
    </section>
  </article>
</BaseLayout>
