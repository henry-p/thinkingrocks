---
import BaseLayout from "../layouts/BaseLayout.astro";
import { formatDate } from "../lib/format";
import { getAllPosts } from "../lib/posts";
import { POSTS_PER_PAGE } from "../lib/pagination";

const allPosts = getAllPosts();
const currentPage = 1;
const totalPages = Math.ceil(allPosts.length / POSTS_PER_PAGE);
const posts = allPosts.slice(0, POSTS_PER_PAGE);
---

<BaseLayout title="Explore">
  <div class="space-y-6">
    <header class="space-y-1">
      <h1 class="text-3xl font-bold tracking-tight">Explore</h1>
      <p class="text-sm text-slate-600">Latest posts</p>
    </header>

    <ul class="divide-y divide-slate-200 rounded-lg border border-slate-900/10 bg-white/70">
      {posts.map((post) => (
        <li class="p-4">
          <a href={post.url} class="block">
            <div class="flex flex-col gap-1 sm:flex-row sm:items-baseline sm:justify-between">
              <span class="text-base font-medium text-slate-900 hover:underline">{post.title}</span>
              <span class="text-sm text-slate-500">{formatDate(post.date)}</span>
            </div>
          </a>
        </li>
      ))}
    </ul>

    {totalPages > 1 && (
      <nav class="flex items-center justify-between">
        <span class="text-sm text-slate-500">
          Page {currentPage} of {totalPages}
        </span>
        <a href={`/page/${currentPage + 1}`} class="rounded-md border border-slate-200 bg-white px-3 py-1 text-sm hover:bg-slate-50">
          Next â†’
        </a>
      </nav>
    )}
  </div>
</BaseLayout>
