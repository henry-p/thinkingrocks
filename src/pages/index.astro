---
import BaseLayout from "../layouts/BaseLayout.astro";
import { formatDate } from "../lib/format";
import { getAllPosts } from "../lib/posts";
import { POSTS_PER_PAGE } from "../lib/pagination";

const allPosts = getAllPosts();
const currentPage = 1;
const totalPages = Math.ceil(allPosts.length / POSTS_PER_PAGE);
const posts = allPosts.slice(0, POSTS_PER_PAGE);
const displayPosts = posts;
---

<BaseLayout title="Explore">
  <div class="space-y-6">
    <header class="space-y-2">
      <h1 class="text-3xl font-bold tracking-tight text-slate-900">Latest posts</h1>
      <p class="text-sm text-slate-600">Newest first.</p>
    </header>

    <div class="space-y-2">
      {displayPosts.map((post) => (
        <a
          href={post.url}
          class="group flex items-center justify-between gap-3 -mx-3 rounded-full px-4 py-3 transition duration-200 ease-out hover:bg-cream-pill"
        >
          <h2 class="text-base font-normal text-slate-900 transition-colors group-hover:text-white group-hover:font-semibold">
            {post.title}
          </h2>
          <span class="whitespace-nowrap rounded-full bg-cream-pill px-3 py-1 text-xs font-medium text-slate-700 transition-colors group-hover:text-white group-hover:font-semibold">
            {formatDate(post.date)}
          </span>
        </a>
      ))}
    </div>

    {totalPages > 1 && (
      <nav class="flex items-center justify-between rounded-lg border border-slate-900/10 bg-white/70 px-4 py-3 text-sm text-slate-600">
        <span>
          Page {currentPage} of {totalPages}
        </span>
        <a
          href={`/page/${currentPage + 1}`}
          class="rounded-md border border-slate-200 bg-white px-3 py-1 font-medium text-slate-700 transition hover:-translate-y-[1px] hover:bg-slate-50 hover:shadow-sm"
        >
          Next â†’
        </a>
      </nav>
    )}
  </div>
</BaseLayout>
