---
import { getAllPosts } from "../lib/posts";
import { formatDate } from "../lib/format";

type Props = {
  currentPathname: string;
};

const { currentPathname } = Astro.props;
const posts = getAllPosts();
---

<div class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm">
  <div class="flex items-baseline justify-between">
    <h2 class="text-sm font-semibold text-slate-900">Posts</h2>
    <p class="text-xs text-slate-500">{posts.length}</p>
  </div>

  <ul class="mt-3 space-y-1">
    {posts.map((post) => {
      const isActive = currentPathname === post.url;
      return (
        <li>
          <a
            href={post.url}
            class:list={[
              "block rounded-md px-2 py-2 text-sm leading-snug hover:bg-slate-50",
              isActive && "bg-slate-50 font-medium text-slate-900",
            ]}
          >
            <span class="block">{post.title}</span>
            <span class="block text-xs text-slate-500">{formatDate(post.date)}</span>
          </a>
        </li>
      );
    })}
  </ul>
</div>
